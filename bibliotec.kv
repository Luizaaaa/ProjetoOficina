<InfoButton>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<Info>:
    BoxLayout:
        orientation: "vertical"

        GridLayout:
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 6

            Label:
                text: "ID"
            Label:
                text: "Titulo"
            Label:
                text: "RA"
            Label:
                text: "Nome"
            Label:
                text: "Horário de emprestimo"
            Label:
                text: "Data de devolucao"

        BoxLayout:
            RecycleView:
                viewclass: 'InfoButton'
                data: [{'text': str(x)} for x in root.data_items]
                InfoLayout:
                    cols: 6
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'lr-tb'
                    multiselect: True
                    touch_multiselect: True
        Button:
            background_normal:'white'
            color:'black'
            text:'Voltar' 
            font_size:25
            on_release:app.root.current = 'ac_interno' 
            size_hint: (0.1,0.1) 
            orientation: 'bt-lr'
            pos_hint:{'x':.05}
